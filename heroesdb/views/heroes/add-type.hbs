{{> head}}
{{> navbar}}

<div class="container text center pt-5">
    <form action="/add-type" method="POST" enctype="multipart/form-data">
        <div class="text-center">
            <h3>Add New Hero</h3>
        </div>
        <div class="file-input-group text-start">
            <input type="file" hidden id="file" aria-label="file upload" name="image" onchange="handleChange()">
        </div>
        <div id="preview-thumbnail" class="text-start"></div>
        <div>
            <input type="text" placeholder="Type Hero" name="name">
        </div>

        <div class="text-center">
            <button type="submit">Submit</button>
        </div>
    </form>
</div>