{{> head}}
{{> navbar}}

<div class="container text center pt-5">
  <form action="/edit/{{hero.id}}" method="POST" enctype="multipart/form-data">
  <input type="hidden" name="id" value={{hero.id}}>
        <input type="hidden" name="oldImage" value={{hero.photo}}>
    <div class="text-center">
      <h3>Update Hero</h3>
    </div>
    <div class="file-input-group text-start">
      <input type="file" hidden id="file" aria-label="file upload" name="image" onchange="handleChange()">
      <label for="file">Upload Photo Hero <img src="/static/icons/image.png" alt="Add Hero Image"></label>
    </div>
    <div id="preview-thumbnail" class="text-start"></div>
    <div>
      <input type="text" placeholder="Hero Name" name="name" value="{{hero.name}}">
    </div>

    <div>
      <input type="number" placeholder="type id" rows="8" name="typeId" value="{{hero.type_id}}"></input>
    </div>


    <div class="text-center">
      <button type="submit">Submit</button>
    </div>
  </form>
</div>